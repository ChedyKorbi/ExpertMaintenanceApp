<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button to Take Photo -->
        <Button
            android:id="@+id/button_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prendre Photo"
            android:padding="12dp"
            android:fontFamily="@font/dm_sans_medium"
android:drawableLeft="@drawable/ic_camera"
            android:layout_marginBottom="8dp" />

        <!-- Button to Choose Photo from Gallery -->
        <Button
            android:id="@+id/button_import_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importer une photo"
            android:fontFamily="@font/dm_sans_medium"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_folder"
            android:layout_marginBottom="16dp" />

        <!-- List Header for Imported Photos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos Importées"
            android:textSize="18sp"
            android:fontFamily="@font/dm_sans_medium"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- List of Imported Photos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/photo_container"
            android:orientation="vertical">
            <TextView
                android:id="@+id/empty_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucune photo importée"
                android:textAlignment="center"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- ImageView to display the selected or captured photo -->
        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center" />


    </LinearLayout>

</ScrollView>
