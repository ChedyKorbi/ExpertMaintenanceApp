<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Top Bar with Back Button, Title, and Refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_backarrow"
            android:contentDescription="Back Button" />

        <TextView
            android:id="@+id/tvHistoriqueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historique"
            android:fontFamily="@font/dm_sans_medium"
            android:layout_marginLeft="15dp"
            android:textSize="21dp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_synch"
            android:contentDescription="Refresh Button" />

    </LinearLayout>

    <!-- Table Layout for displaying interventions -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableLayout
            android:id="@+id/tableHistorique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Table Header -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TerminÃ©?"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commentaire"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center" />
            </TableRow>

            <!-- Example Data Row -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:padding="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-06-21"
                    android:padding="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrat d'entretien"
                    android:padding="5dp"
                    android:gravity="center" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>
